{
  "manifest_version": 3,
  "name": "Focus Blocker for Toggl",
  "version": "1.0",
  "permissions": ["storage"],
  "host_permissions": ["https://api.track.toggl.com/*"],
  "action": { 
    "default_popup": "index.html" 
  },
  "background": { 
    "service_worker": "background.js", 
    "type": "module" 
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}